{
  "name": "lingolab-backend",
  "version": "1.0.0",
  "description": "LingoLab Backend API with Express.js, TypeORM, PostgreSQL, and Swagger",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsoa spec-and-routes && tsc",
    "dev": "tsoa spec-and-routes && ts-node src/server.ts",
    "start": "node dist/server.js",
    "swagger": "tsoa spec-and-routes",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/data-source.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/data-source.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/data-source.ts",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d src/data-source.ts"
  },
  "keywords": [
    "express",
    "typescript",
    "typeorm",
    "postgresql",
    "swagger",
    "tsoa"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "tsoa": "^5.1.1",
    "typeorm": "^0.3.17",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "@types/cors": "^2.8.17",
    "@types/swagger-ui-express": "^4.1.6",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2"
  }
}
