{
  "entryFile": "src/server.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/controllers/**/*.controller.ts"],
  "spec": {
    "outputDirectory": "src",
    "specVersion": 3,
    "basePath": "/api",
    "name": "LingoLab API",
    "description": "LingoLab Backend API Documentation",
    "version": "1.0.0",
    "contact": {
      "name": "LingoLab"
    },
    "securityDefinitions": {
      "bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Enter your JWT token"
      }
    }
  },
  "routes": {
    "routesDir": "src",
    "routesFileName": "routes.ts",
    "middleware": "express",
    "basePath": "/api",
    "authenticationModule": "./src/authentication.ts"
  }
}
